<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<main >
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <% if (typeof displayName == 'string' && displayName) { %>
                <a href="/incident-list/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle"></i> Add Incident</a>
            <% } %>
            <br>            
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr class="d-flex">
                    <% if (typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-1">Incident Number</th>
                        <th class="text-center col-2">Description</th>
                        <th class="text-center col-1">Priority</th>
                        <th class="text-center col-2">Customer</th>
                        <th class="text-center col-1">Status</th>
                        <th class="text-center col-1">Last Updated Time</th>
                        <th class="text-center col-1">Duration (Minutes)</th>
                        <th class="text-center col-1">Resolution</th>                       
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else { %>
                        <th class="text-center col-1">Incident Number</th>
                        <th class="text-center col-3">Description</th>
                        <th class="text-center col-1">Priority</th>
                        <th class="text-center col-3">Customer</th>
                        <th class="text-center col-1">Status</th>
                        <th class="text-center col-1">Last Updated Time</th>
                        <th class="text-center col-1">Duration (Minutes)</th>
                        <th class="text-center col-1">Resolution</th>                                                 
                    <% } %>
                </tr>
                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < IncidentList.length; count++) { %>
                    <tr class="d-flex">
                        <% if (typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-1"><%= IncidentList[count].incidentNumber %></td>
                            <td class="text-center col-2"><%= IncidentList[count].description %></td>
                            <td class="text-center col-1"><%= IncidentList[count].priority %></td>
                            <td class="text-center col-2"><%= IncidentList[count].customerName %></td>
                            <td class="text-center col-1"><%= IncidentList[count].status %></td>
                            <td class="text-center col-1"><%= IncidentList[count].lastUpdateTime %></td>
                            <td class="text-center col-1"><%= IncidentList[count].duration %></td>
                            <td class="text-center col-1"><%= IncidentList[count].resolution %></td>
                            <td class="text-center col-1">
                                <a href="/incident-list/edit/<%= IncidentList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/incident-list/delete/<%= IncidentList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        <% } else { %>
                            <td class="text-center col-1"><%= IncidentList[count].incidentNumber %></td>
                            <td class="text-center col-3"><%= IncidentList[count].description %></td>
                            <td class="text-center col-1"><%= IncidentList[count].priority %></td>
                            <td class="text-center col-3"><%= IncidentList[count].customerName %></td>
                            <td class="text-center col-1"><%= IncidentList[count].status %></td>
                            <td class="text-center col-1"><%= IncidentList[count].lastUpdateTime %></td>
                            <td class="text-center col-1"><%= IncidentList[count].duration %></td>
                            <td class="text-center col-1"><%= IncidentList[count].resolution %></td>                           
                        <% } %>
                    </tr>
                <% } %>
            </table>
            
        </div>
    </div>
  </main>
<%- include ../partials/footer.ejs %>
<%- include ../partials/bottom_nav.ejs %>
 
